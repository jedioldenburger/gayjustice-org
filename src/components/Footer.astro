---
import Container from "./Container.astro";
import { SITE } from "@/config/site";
---

<footer class="footer">
  <Container>
    <div class="footer-wrapper">
      <!-- Main Grid -->
      <div class="footer-grid">
        <!-- Brand Section -->
        <div class="footer-brand">
          <div class="brand-mark">{SITE.name}</div>
          <p class="brand-description">
            Legal information platform for LHBTIQ+ rights in the Netherlands,
            Europe & United States. Fighting discrimination through knowledge.
          </p>
          <div class="brand-meta">
            <a href="mailto:info@stvg.org" class="meta-link">
              <span class="meta-icon">‚úâ</span>
              info@stvg.org
            </a>
            <div class="meta-item">
              <span class="meta-icon">üìç</span>
              <span>Amsterdam, NL</span>
            </div>
          </div>
        </div>

        <!-- Navigation Columns -->
        <div class="footer-column">
          <h4 class="column-title">Explore</h4>
          <nav class="nav-list">
            <a href="/over-ons">About Us</a>
            <a href="/thema">Topics</a>
            <a href="/resources">Resources</a>
            <a href="/blog">Blog</a>
            <a href="/projecten">Projects</a>
            <a href="/gids">Guides</a>
          </nav>
        </div>

        <div class="footer-column">
          <h4 class="column-title">Support</h4>
          <nav class="nav-list">
            <a href="/doneren">Donate</a>
            <a href="/word-lid">Membership</a>
            <a href="/contact">Contact</a>
            <a href="/en/">English</a>
            <a href="/transparantie">Transparency</a>
          </nav>
        </div>

        <div class="footer-column">
          <h4 class="column-title">Legal</h4>
          <nav class="nav-list">
            <a href="/privacy">Privacy</a>
            <a href="/ai-policy">AI Policy</a>
            <a href="/redactionele-principes">Editorial</a>
            <a href="/legal/no-legal-advice">Disclaimer</a>
          </nav>
        </div>

        <!-- Partners Column -->
        <div class="footer-column">
          <h4 class="column-title">Partners</h4>
          <nav class="nav-list">
            <a href="https://www.amnesty.nl" target="_blank" rel="noopener"
              >Amnesty Int'l</a
            >
            <a href="https://www.echr.coe.int/" target="_blank" rel="noopener"
              >European Court HR</a
            >
            <a
              href="https://www.mensenrechten.nl"
              target="_blank"
              rel="noopener">NL Human Rights</a
            >
          </nav>
        </div>
      </div>

      <!-- Divider -->
      <div class="footer-divider"></div>

      <!-- Bottom Bar -->
      <div class="footer-bottom">
        <div class="bottom-left">
          <div class="org-info">
            <a
              href="https://stvg.org"
              target="_blank"
              rel="noopener"
              class="org-link"
              ><strong>Stichting Vrijheid & Gelijkheid</strong></a
            >
            {
              (SITE.identifiers.kvk || SITE.identifiers.rsin) && (
                <div class="identifiers">
                  {SITE.identifiers.kvk && (
                    <span>KvK: {SITE.identifiers.kvk}</span>
                  )}
                  {SITE.identifiers.kvk && SITE.identifiers.rsin && (
                    <span class="sep">‚Ä¢</span>
                  )}
                  {SITE.identifiers.rsin && (
                    <span>RSIN: {SITE.identifiers.rsin}</span>
                  )}
                </div>
              )
            }
            {SITE.isANBI && <div class="anbi-badge">‚úì ANBI Status</div>}
          </div>
        </div>

        <div class="bottom-right">
          <p class="footer-credit">
            ¬© {new Date().getFullYear()}
            {SITE.name} ‚Ä¢ Built for Justice
          </p>
        </div>
      </div>
    </div>
  </Container>
</footer>

<style>
  .footer {
    margin-top: 80px;
    padding: 60px 0 30px;
    position: relative;
    background: var(--footer-bg);
    border-top: 1px solid rgba(255, 255, 255, 0.1);
  }

  .footer-wrapper {
    display: flex;
    flex-direction: column;
    gap: 40px;
  }

  /* Grid Layout */
  .footer-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 40px;
  }

  @media (min-width: 640px) {
    .footer-grid {
      grid-template-columns: 1.5fr 1fr;
      gap: 50px;
    }
  }

  @media (min-width: 1024px) {
    .footer-grid {
      grid-template-columns: 1.8fr repeat(4, 1fr);
      gap: 40px;
    }
  }

  /* Brand Section */
  .footer-brand {
    display: flex;
    flex-direction: column;
    gap: 16px;
    padding-right: 0;
  }

  @media (min-width: 1024px) {
    .footer-brand {
      padding-right: 20px;
      border-right: 1px solid rgba(255, 255, 255, 0.1);
    }
  }

  .brand-mark {
    font-size: 1.6em;
    font-weight: 900;
    background: linear-gradient(135deg, #facc15 0%, #fde047 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    letter-spacing: -0.02em;
  }

  .brand-description {
    font-size: 0.95em;
    line-height: 1.6;
    color: rgba(255, 255, 255, 0.9);
    margin: 0;
  }

  .brand-meta {
    display: flex;
    flex-direction: column;
    gap: 12px;
    margin-top: 8px;
  }

  .meta-link,
  .meta-item {
    display: flex;
    align-items: center;
    gap: 8px;
    font-size: 0.9em;
    color: rgba(255, 255, 255, 0.9);
  }

  .meta-link {
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .meta-link:hover {
    color: #facc15;
  }

  .meta-icon {
    font-size: 1.1em;
    opacity: 0.8;
  }

  /* Columns */
  .footer-column {
    display: flex;
    flex-direction: column;
    gap: 16px;
  }

  .column-title {
    font-size: 0.95em;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    color: rgba(255, 255, 255, 1);
    margin: 0;
    padding-bottom: 12px;
    border-bottom: 2px solid rgba(250, 204, 21, 0.3);
  }

  .nav-list {
    display: flex;
    flex-direction: column;
    gap: 10px;
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .nav-list a {
    font-size: 0.9em;
    color: rgba(255, 255, 255, 0.95);
    text-decoration: none;
    transition: all 0.2s ease;
    position: relative;
    padding-left: 0;
  }

  .nav-list a::before {
    content: "‚Ä∫";
    position: absolute;
    left: -14px;
    opacity: 0;
    transition: all 0.2s ease;
    color: #facc15;
  }

  .nav-list a:hover {
    color: #facc15;
    padding-left: 12px;
  }

  .nav-list a:hover::before {
    opacity: 1;
  }

  /* Divider */
  .footer-divider {
    height: 1px;
    background: linear-gradient(
      to right,
      transparent,
      rgba(255, 255, 255, 0.1),
      transparent
    );
  }

  /* Bottom Section */
  .footer-bottom {
    display: grid;
    grid-template-columns: 1fr;
    gap: 20px;
    padding-top: 20px;
  }

  @media (min-width: 768px) {
    .footer-bottom {
      grid-template-columns: 1fr 1fr;
      gap: 40px;
      align-items: center;
    }
  }

  .bottom-left {
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

  .org-info {
    font-size: 0.9em;
    color: rgba(255, 255, 255, 0.9);
  }

  .org-info strong {
    color: rgba(255, 255, 255, 0.95);
    font-weight: 600;
  }

  .identifiers {
    display: flex;
    gap: 8px;
    margin-top: 4px;
    font-size: 0.85em;
    color: rgba(255, 255, 255, 0.8);
  }

  .identifiers .sep {
    opacity: 0.5;
  }

  .anbi-badge {
    display: inline-block;
    margin-top: 8px;
    padding: 4px 10px;
    background: rgba(34, 197, 94, 0.15);
    border: 1px solid rgba(34, 197, 94, 0.3);
    border-radius: 4px;
    color: #86efac;
    font-size: 0.8em;
    font-weight: 600;
  }

  .org-link {
    color: rgba(255, 255, 255, 0.95);
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .org-link:hover {
    color: #facc15;
  }

  .bottom-right {
    text-align: right;
  }

  @media (max-width: 767px) {
    .bottom-right {
      text-align: left;
    }
  }

  .footer-credit {
    font-size: 0.85em;
    color: rgba(255, 255, 255, 0.8);
    margin: 0;
  }

  /* Responsive adjustments */
  @media (min-width: 640px) and (max-width: 1023px) {
    .footer-grid {
      grid-template-columns: 1.5fr 1fr 1fr;
    }
  }

  @media (max-width: 639px) {
    .footer-grid {
      gap: 30px;
    }

    .column-title {
      font-size: 0.9em;
    }

    .brand-mark {
      font-size: 1.4em;
    }

    .footer-bottom {
      padding-top: 0;
    }
  }
</style>
