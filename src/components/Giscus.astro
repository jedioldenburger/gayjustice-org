---
interface Props {
  lang?: string;
}

const { lang = "nl" } = Astro.props;
---

<section class="comments" style="margin-top: 48px;">
  <h2 style="font-size: 1.25em; margin-bottom: 16px;">Discussie</h2>

  <script
    src="https://giscus.app/client.js"
    data-repo="jedioldenburger/gayjustice-org"
    data-repo-id="R_kgDORDTRyg"
    data-category="Blog comments"
    data-category-id="DIC_kwDORDTRys4C1jEO"
    data-mapping="pathname"
    data-strict="0"
    data-reactions-enabled="1"
    data-emit-metadata="1"
    data-input-position="top"
    data-theme="preferred_color_scheme"
    data-lang={lang}
    data-loading="lazy"
    crossorigin="anonymous"
    async
  ></script>

  <p
    class="comment-note"
    style="margin-top: 16px; font-size: 0.85em; color: var(--muted);"
  >
    Discussies zijn publiek en gemodereerd via GitHub. Geen juridisch advies.
    Geen individuele casussen.
  </p>
</section>
