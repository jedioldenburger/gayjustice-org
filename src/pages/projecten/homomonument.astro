    max-width: 800px;
  }

  .section {
    margin-bottom: 2rem;
  }

  .surface {
    background: rgba(63, 8, 185, 0.02);
    border-left: 4px solid #3f08b9;
    border-radius: 2px;
  }

  h2 {
    font-size: 1.5rem;
    font-weight: 700;
    margin-bottom: 1rem;
    color: #3f08b9;
  }

  h3 {
    font-size: 1.15rem;
    font-weight: 600;
    margin-bottom: 0.75rem;
    color: rgba(0, 0, 0, 0.9);
  }

  p {
    color: rgba(0, 0, 0, 0.9);
    line-height: 1.6;
    margin: 1rem 0;
  }

  ul {
    margin: 1rem 0;
    padding-left: 1.5rem;
  }

