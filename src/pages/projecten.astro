---
import Layout from "../layouts/Layout.astro";
import Container from "../components/Container.astro";
import PageHeader from "../components/PageHeader.astro";

const seo = {
  title: "Projecten – Rechtsbesherming & Gelijke Behandeling | GayJustice.org",
  description:
    "Projecten van GayJustice.org: Rechtsbescherming, gelijke behandeling en mensenrechten voor LHBTIQ+ personen. Homomonument, vluchtelingen, politieoptreden & meer.",
  canonical: "/projecten/",
  breadcrumbs: [
    { name: "GayJustice.org", url: "https://www.gayjustice.org/" },
    { name: "Projects", url: "https://www.gayjustice.org/projecten/" },
  ],
};
---

<Layout seo={seo}>
  <script type="application/ld+json">
    {JSON.stringify({
      "@context": "https://schema.org",
      "@type": "WebPage",
      "@id": "https://gayjustice.org/projecten/#webpage",
      "url": "https://gayjustice.org/projecten/",
      "name": "Projecten | GayJustice.org",
      "description": "Overzicht van projecten van GayJustice.org gericht op rechtsbescherming, gelijke behandeling en mensenrechten.",
      "isPartOf": { "@id": "https://gayjustice.org/#website" },
      "publisher": { "@id": "https://gayjustice.org/#organization" }
    })}
  </script>
  <script type="application/ld+json">
    {JSON.stringify({
      "@context": "https://schema.org",
      "@type": "ItemList",
      "name": "Projecten van GayJustice.org",
      "itemListElement": [
        { "@type": "ListItem", "position": 1, "url": "https://gayjustice.org/projecten/homomonument/" },
        { "@type": "ListItem", "position": 2, "url": "https://gayjustice.org/projecten/holocaust-homoseksuele-slachtoffers/" },
        { "@type": "ListItem", "position": 3, "url": "https://gayjustice.org/projecten/voorlichting-scholen/" },
        { "@type": "ListItem", "position": 4, "url": "https://gayjustice.org/projecten/dakloze-homoseksuele-jongeren/" },
        { "@type": "ListItem", "position": 5, "url": "https://gayjustice.org/projecten/homoseksuele-vluchtelingen/" },
        { "@type": "ListItem", "position": 6, "url": "https://gayjustice.org/projecten/rechtsbescherming-politieoptreden/" }
      ]
    })}
  </script>
  <PageHeader
    eyebrow="What we do"
    title="Projects"
    lead="We work across themes where human rights and equal treatment are under pressure in practice. Below are our current focus areas."
  />

  <Container>
    <section class="section">
      <div class="grid cols-3">
        <div class="surface" style="padding: 20px;">
          <h2>
            <a class="card-link" href="/projecten/homomonument">Homomonument</a>
          </h2>
          <p>
            Educatie en herdenking over het eerste LHBTIQ+-monument ter wereld,
            betekenis voor mensenrechten en publieksbewustzijn.
          </p>
          <p style="margin: 0;">
            <a class="btn btn-outline" href="/projecten/homomonument"
              >Bekijk project</a
            >
          </p>
        </div>

        <div class="surface" style="padding: 20px;">
          <h2>
            <a
              class="card-link"
              href="/projecten/holocaust-homoseksuele-slachtoffers"
              >Holocaust – Homoseksuele slachtoffers</a
            >
          </h2>
          <p>
            Educatie over vervolging van homoseksuele personen tijdens de
            Holocaust, juridische erkenning en herdenking.
          </p>
          <p style="margin: 0;">
            <a
              class="btn btn-outline"
              href="/projecten/holocaust-homoseksuele-slachtoffers"
              >Bekijk project</a
            >
          </p>
        </div>

        <div class="surface" style="padding: 20px;">
          <h2>
            <a class="card-link" href="/projecten/voorlichting-scholen"
              >Voorlichting op scholen</a
            >
          </h2>
          <p>
            Juridisch correcte informatie over gelijke behandeling en LHBTIQ+
            rechten in het onderwijs.
          </p>
          <p style="margin: 0;">
            <a class="btn btn-outline" href="/projecten/voorlichting-scholen"
              >Bekijk project</a
            >
          </p>
        </div>

        <div class="surface" style="padding: 20px;">
          <h2>
            <a class="card-link" href="/projecten/dakloze-homoseksuele-jongeren"
              >Dakloze homoseksuele jongeren</a
            >
          </h2>
          <p>
            Informatie en rechtsbescherming voor dakloze homoseksuele jongeren,
            signalering van knelpunten en doorverwijzing.
          </p>
          <p style="margin: 0;">
            <a
              class="btn btn-outline"
              href="/projecten/dakloze-homoseksuele-jongeren">Bekijk project</a
            >
          </p>
        </div>

        <div class="surface" style="padding: 20px;">
          <h2>
            <a class="card-link" href="/projecten/homoseksuele-vluchtelingen"
              >Homoseksuele vluchtelingen</a
            >
          </h2>
          <p>
            Toegankelijke informatie over asielrecht en rechtsbescherming van
            homoseksuele vluchtelingen.
          </p>
          <p style="margin: 0;">
            <a
              class="btn btn-outline"
              href="/projecten/homoseksuele-vluchtelingen">Bekijk project</a
            >
          </p>
        </div>

        <div class="surface" style="padding: 20px;">
          <h2>
            <a
              class="card-link"
              href="/projecten/rechtsbescherming-politieoptreden"
              >Rechtsbescherming bij politieoptreden</a
            >
          </h2>
          <p>
            Juridische informatie over politieoptreden, discriminatie en gelijke
            behandeling. Rechten, procedures en toezichtmechanismen.
          </p>
          <p style="margin: 0;">
            <a
              class="btn btn-outline"
              href="/projecten/rechtsbescherming-politieoptreden"
              >Bekijk project</a
            >
          </p>
        </div>
      </div>
    </section>

    <section class="section">
      <div class="surface" style="padding: 22px;">
        <h2>Have an idea?</h2>
        <p>
          We’re open to cooperation. Send a message with your proposal or
          question.
        </p>
        <div style="display:flex; gap:12px; flex-wrap:wrap;">
          <a class="btn btn-primary" href="/contact">Contact</a>
          <a class="btn btn-outline" href="/missie">Mission</a>
        </div>
      </div>
    </section>
  </Container>
</Layout>

<style>
  .card-link {
    color: inherit;
    text-decoration: none;
  }

  .card-link:hover {
    text-decoration: underline;
  }
</style>
