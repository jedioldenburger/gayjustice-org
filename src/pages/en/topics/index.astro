---
import Layout from "../../../layouts/Layout.astro";
import Container from "../../../components/Container.astro";
import PageHeader from "../../../components/PageHeader.astro";

const seo = {
  title: "Topics",
  description:
    "Topics where we publish explanations, sources, and what we do in practice.",
  canonical: "/en/topics/",
  lang: "en-US",
  alternates: [
    { hreflang: "nl", href: "https://www.gayjustice.org/thema/" },
    { hreflang: "en", href: "https://www.gayjustice.org/en/topics/" },
    { hreflang: "x-default", href: "https://www.gayjustice.org/" },
  ],
  breadcrumbs: [
    { name: "GayJustice.org", url: "https://www.gayjustice.org/en/" },
    { name: "Topics", url: "https://www.gayjustice.org/en/topics/" },
  ],
};
---

<Layout seo={seo}>
  <PageHeader
    eyebrow="Topics"
    title="Topics"
    lead="Choose a topic for explanations, sources, and what we do in practice."
  />

  <Container>
    <section class="section">
      <div class="surface" style="padding: 22px;">
        <ul>
          <li>
            <a class="link" href="/en/topics/human-rights">Human rights</a>
          </li>
          <li>
            <a class="link" href="/en/topics/gay-rights">Gay rights / LGBT+</a>
          </li>
        </ul>
      </div>
    </section>
  </Container>
</Layout>
