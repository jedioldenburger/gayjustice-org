---
import Layout from "../layouts/Layout.astro";
import Container from "../components/Container.astro";
import PageHeader from "../components/PageHeader.astro";

const seo = {
  title: "Organisatie & Bestuur | Stichting Vrijheid & Gelijkheid",
  description:
    "Organisatie en bestuur van GayJustice.org: Oprichter, voorzitter, secretaris, en elkaar aanvullende expertise.",
  canonical: "/organisatie/",
  lang: "nl-NL",
  alternates: [
    { hreflang: "nl", href: "https://www.gayjustice.org/organisatie/" },
    { hreflang: "en", href: "https://www.gayjustice.org/en/organization/" },
    { hreflang: "x-default", href: "https://www.gayjustice.org/" },
  ],
  breadcrumbs: [
    { name: "GayJustice.org", url: "https://www.gayjustice.org/" },
    { name: "Over ons", url: "https://www.gayjustice.org/over-ons/" },
    { name: "Organisatie & Bestuur", url: "https://www.gayjustice.org/organisatie/" },
  ],
};
---

<Layout seo={seo}>
  <PageHeader
    eyebrow="Over STVG"
    title="Organisatie & Bestuur"
    lead="Stichting Vrijheid & Gelijkheid wordt bestuurd door betrokken professionals met complementaire expertise."
  />

  <Container>
    <section class="section">
      <div class="surface" style="padding: 22px; margin-bottom: 22px;">
        <p style="text-align: center; color: var(--muted); margin-bottom: 18px;">
          Stichting Vrijheid &amp; Gelijkheid wordt bestuurd door betrokken
          professionals met complementaire expertise.
        </p>
      </div>

      <div style="margin-bottom: 32px;">
        <h3 class="org-subhead">Oprichter</h3>

        <div class="people people--single">
          <article class="person">
            <img
              class="avatar"
              src="/pictures/oldenburger.webp"
              alt="P.W. Oldenburger - Oprichter van Stichting Vrijheid & Gelijkheid en GayJustice.org"
              loading="lazy"
              width="640"
              height="640"
            />
            <div class="person-body">
              <div class="role">Founder / Oprichter</div>
              <h3 class="name">P.W. Oldenburger</h3>
              <p class="bio">
                Verantwoordelijk voor initiële oprichting, strategische
                uitgangspunten en juridische/bestuurlijke basis van de
                stichting.
              </p>
            </div>
          </article>
        </div>
      </div>

      <div class="divider" aria-hidden="true">⸻</div>

      <div style="margin-top: 32px;">
        <h3 class="org-subhead">Bestuur</h3>

        <div class="people">
          <article class="person">
            <img
              class="avatar"
              src="/pictures/wil-groot.webp"
              alt="Wil Groot - Voorzitter van Stichting Vrijheid & Gelijkheid, cultureel organisator"
              loading="lazy"
              width="640"
              height="640"
            />
            <div class="person-body">
              <div class="role">Voorzitter</div>
              <h3 class="name">Wil Groot</h3>
              <p class="bio">
                Kwartiermaker en oprichter van Stichting Willen en Doen.
                Cultureel-maatschappelijk vormgever, organisator, schrijver en
                journalist.
              </p>
            </div>
          </article>

          <article class="person">
            <img
              class="avatar"
              src="/pictures/andy-va-der-Geugten.webp"
              alt="Andy van der Geugten - Secretaris van Stichting Vrijheid & Gelijkheid"
              loading="lazy"
              width="640"
              height="640"
            />
            <div class="person-body">
              <div class="role">Secretaris</div>
              <h3 class="name">Andy van der Geugten</h3>
              <p class="bio">
                Professioneel adviseur met expertise in coaching,
                eventmanagement en marketing. Verantwoordelijk voor
                verslaglegging en organisatorische continuïteit.
              </p>
            </div>
          </article>
        </div>
      </div>
    </section>
  </Container>
</Layout>

<style>
  .people {
    display: grid;
    gap: 14px;
    margin-top: 14px;
  }

  .people--single {
    grid-template-columns: 1fr;
    justify-items: center;
  }

  .people--single .person {
    width: 100%;
  }

  .org-title,
  .org-subhead {
    text-align: center;
  }

  .person {
    display: grid;
    grid-template-columns: 80px 1fr;
    gap: 14px;
    align-items: start;
    padding: 14px;
    border-radius: var(--radius);
    background: var(--surface-solid);
    border: var(--border-w) solid var(--border-color);
    box-shadow: var(--shadow-2);
  }

  .avatar {
    width: 80px;
    height: 80px;
    border-radius: 999px;
    background: var(--ui-bg);
    border: var(--border-w) solid var(--border-color);
    display: grid;
    place-items: center;
  }

  img.avatar {
    object-fit: cover;
  }

  .divider {
    margin: 10px 0;
    color: var(--subtle);
    text-align: center;
    letter-spacing: 0.08em;
  }

  .subhead {
    margin: 16px 0 10px;
  }

  .role {
    font-size: 0.9rem;
    color: var(--subtle);
    font-weight: 650;
    letter-spacing: 0.01em;
    margin-bottom: 4px;
  }

  .name {
    margin: 0 0 8px;
  }

  .bio {
    margin: 0;
    color: var(--muted);
  }

  .surface {
    border: var(--border-w) solid var(--border-color);
    border-radius: var(--radius);
    background: var(--surface-solid);
  }

  .section {
    margin: 40px 0;
  }

  @media (min-width: 860px) {
    .people {
      grid-template-columns: 1fr 1fr;
      gap: 16px;
    }

    .people--single {
      grid-template-columns: 1fr;
    }

    .person {
      grid-template-columns: 96px 1fr;
      padding: 16px;
    }

    .avatar {
      width: 96px;
      height: 96px;
    }
  }
</style>
