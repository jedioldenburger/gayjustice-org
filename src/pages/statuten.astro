          <a
            href="/pictures/E_Integriteitscode_STVG.pdf"
            target="_blank"
            class="doc-card"
            style="display: block; text-decoration: none; color: inherit;"
          >
            <div
              class="surface"
              style="padding: 20px; height: 100%; transition: transform 0.2s; border: 1px solid rgba(255, 255, 255, 0.1);"
            >
