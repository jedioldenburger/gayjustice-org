---
import Layout from "../layouts/Layout.astro";
import Container from "../components/Container.astro";
import PageHeader from "../components/PageHeader.astro";
import { SITE } from "@/config/site";

const seo = {
  title: "Support Equal Treatment and Legal Protection",
  description:
    "Support the work of GayJustice.org, an initiative of Stichting Vrijheid & Gelijkheid (STVG), focused on legal protection and equal treatment for gay people.",
  canonical: "/en/donate",
  lang: "en-US",
  robots: "noindex,follow",
  alternates: [
    { hreflang: "nl", href: "https://www.gayjustice.org/doneren/" },
    { hreflang: "en", href: "https://www.gayjustice.org/en/donate" },
    { hreflang: "x-default", href: "https://www.gayjustice.org/" },
  ],
  breadcrumbs: [
    { name: "GayJustice.org", url: "https://www.gayjustice.org/" },
    { name: "Support", url: "https://www.gayjustice.org/en/donate" },
  ],
};

const donateJsonLd = {
  "@context": "https://schema.org",
  "@graph": [
    {
      "@type": "WebPage",
      "@id": "https://www.gayjustice.org/en/donate#webpage",
      url: "https://www.gayjustice.org/en/donate",
      name: "Support Equal Treatment and Legal Protection | GayJustice.org",
      description:
        "Support the work of GayJustice.org, an initiative of Stichting Vrijheid & Gelijkheid (STVG), focused on legal protection and equal treatment for gay people.",
      isPartOf: {
        "@id": "https://www.gayjustice.org/#website",
      },
      publisher: {
        "@id": "https://www.stvg.org/#organization",
      },
      inLanguage: "en-US",
    },
    {
      "@type": "DonateAction",
      name: "Donate to support legal protection and equal treatment",
      description:
        "100% of donations support the mission of legal protection and equal treatment for gay people.",
      recipient: {
        "@type": "Organization",
        "@id": "https://www.stvg.org/#organization",
        name: "Stichting Vrijheid & Gelijkheid",
        legalName: "Stichting Vrijheid & Gelijkheid",
      },
      target: {
        "@type": "EntryPoint",
        urlTemplate: "https://www.gayjustice.org/en/donate",
        actionPlatform: [
          "http://schema.org/DesktopWebPlatform",
          "http://schema.org/MobileWebPlatform",
        ],
      },
      agent: {
        "@id": "https://www.stvg.org/#organization",
      },
    },
  ],
};
---

<Layout seo={seo}>
  <PageHeader
    eyebrow="Support"
    title="Support this work"
    lead="GayJustice.org is an initiative of Stichting Vrijheid & Gelijkheid (STVG). Support helps keep information source-based, neutral, and safe for public use."
  />

  <Container>
    <section class="section">
      <div class="surface" style="padding: 22px;">
        <h2>How to support</h2>
        <p>
          This page is intentionally non-commercial in framing: no products, no
          offers, no pricing. It is simply a way to support a public-interest
          initiative.
        </p>
        <p>
          100% of donations go directly to the mission: legal protection and
          equal treatment for gay people.
        </p>

        <h3 style="margin-top: 20px;">Donation methods</h3>
        <p class="muted">
          Payment integrations are being set up. In the meantime, you can
          contact us directly to arrange a donation.
        </p>

        <div
          style="display:flex; gap:12px; flex-wrap:wrap; margin-top: 16px; margin-bottom: 20px;"
        >
          <a
            class="btn btn-primary"
            href={`mailto:${SITE.email}?subject=Donation%20inquiry`}
            >Contact about donating</a
          >
        </div>
      </div>
    </section>

    <section class="section">
      <div class="surface" style="padding: 22px;">
        <h2>Trust and transparency</h2>
        <p>
          GayJustice.org is an initiative of Stichting Vrijheid &amp; Gelijkheid
          (STVG), registered with the Dutch Chamber of Commerce.
        </p>
        {
          SITE.identifiers.kvk && (
            <p>
              <strong>KvK:</strong> {SITE.identifiers.kvk}
              {SITE.identifiers.rsin && (
                <>
                  {" "}
                  | <strong>RSIN:</strong> {SITE.identifiers.rsin}
                </>
              )}
            </p>
          )
        }
        {
          SITE.isANBI && (
            <p class="anbi-notice">
              STVG is a recognized Public Benefit Organization (ANBI). Donations
              may be tax-deductible.
            </p>
          )
        }

        <div style="display:flex; gap:12px; flex-wrap:wrap; margin-top: 16px;">
          <a class="btn btn-outline" href="/transparantie">Transparency</a>
          <a
            class="btn btn-outline"
            href="https://www.stvg.org/transparantie"
            target="_blank"
            rel="noopener noreferrer">Governance (STVG)</a
          >
          <a class="btn btn-ghost" href="/legal/no-legal-advice"
            >Why we don't provide legal advice</a
          >
        </div>
      </div>
    </section>

    <p><small>Last updated: 2026</small></p>
  </Container>

  <script type="application/ld+json" set:html={JSON.stringify(donateJsonLd)} />
</Layout>

<style>
  .muted {
    color: var(--muted);
    font-style: italic;
  }

  .anbi-notice {
    padding: 12px 16px;
    background: rgba(34, 197, 94, 0.1);
    border: 1px solid rgba(34, 197, 94, 0.3);
    border-radius: var(--radius);
    color: var(--text);
  }
</style>
