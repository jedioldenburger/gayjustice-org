import Layout from "../../layouts/Layout.astro";
import Container from "../../components/Container.astro";
import PageHeader from "../../components/PageHeader.astro";

const seo = {
  title: "Onderwerpen & speerpunten",
  description:
    "Overzicht van de speerpunten van GayJustice.org â€” brongebaseerd en zorgvuldig.",
  canonical: "/speerpunten/",
