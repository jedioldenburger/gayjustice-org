---
import { getCollection } from "astro:content";
import Layout from "../../../layouts/Layout.astro";
import Container from "../../../components/Container.astro";
import PageHeader from "../../../components/PageHeader.astro";

export async function getStaticPaths() {
  const posts = await getCollection(
    "blog",
    ({ data }) => !data.draft && data.lang === "nl",
  );
  const allTags = new Set<string>();
  posts.forEach((post) => post.data.tags?.forEach((tag) => allTags.add(tag)));

  return [...allTags].map((tag) => ({
    params: { tag },
    props: { tag },
  }));
}

const { tag } = Astro.props;
const posts = await getCollection(
  "blog",
  ({ data }) => !data.draft && data.lang === "nl" && data.tags?.includes(tag),
);
const sortedPosts = posts.sort(
  (a, b) => b.data.pubDatetime.getTime() - a.data.pubDatetime.getTime(),
);

const seo = {
  title: `${tag} | Tags | Blog | STVG`,
  description: `Artikelen met tag "${tag}".`,
  canonical: `/blog/tags/${tag}/`,
  lang: "nl-NL",
  alternates: [
    { hreflang: "nl", href: `https://www.gayjustice.org/blog/tags/${tag}/` },
    { hreflang: "en", href: `https://www.gayjustice.org/en/blog/tags/` },
    {
      hreflang: "x-default",
      href: `https://www.gayjustice.org/blog/tags/${tag}/`,
    },
  ],
  breadcrumbs: [
    { name: "GayJustice.org", url: "https://www.gayjustice.org/" },
    { name: "Blog", url: "https://www.gayjustice.org/blog/" },
    { name: "Tags", url: "https://www.gayjustice.org/blog/tags/" },
    { name: tag, url: `https://www.gayjustice.org/blog/tags/${tag}/` },
  ],
};
---

<Layout seo={seo}>
  <PageHeader
    eyebrow="Tag"
    title={tag}
    lead={`${sortedPosts.length} artikel${sortedPosts.length !== 1 ? "en" : ""}`}
  />

  <Container>
    <section class="section">
      <div class="surface" style="padding: 22px;">
        {
          sortedPosts.length > 0 ? (
            <ul style="list-style: none; padding: 0; margin: 0;">
              {sortedPosts.map((post) => (
                <li style="margin-bottom: 24px; padding-bottom: 24px; border-bottom: 1px solid var(--subtle);">
                  <h3 style="margin: 0 0 8px;">
                    <a
                      href={`/blog/${post.slug}/`}
                      style="color: inherit; text-decoration: none;"
                    >
                      {post.data.title}
                    </a>
                  </h3>
                  <p style="margin: 4px 0; color: var(--muted); font-size: 0.9em;">
                    {post.data.pubDatetime.toLocaleDateString("nl-NL")} •{" "}
                    {post.data.author}
                  </p>
                  <p style="margin: 8px 0 0;">{post.data.description}</p>
                </li>
              ))}
            </ul>
          ) : (
            <p style="text-align: center; color: var(--muted);">
              Geen artikelen met deze tag.
            </p>
          )
        }
      </div>
    </section>

    <nav style="margin-top: 24px; display: flex; gap: 12px;">
      <a href="/blog/tags/" class="btn btn-outline">← Alle tags</a>
      <a href="/blog/" class="btn btn-ghost">← Blog</a>
    </nav>
  </Container>
</Layout>
