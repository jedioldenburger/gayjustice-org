---
import Layout from "../../layouts/Layout.astro";
import Container from "../../components/Container.astro";
import PageHeader from "../../components/PageHeader.astro";

const seo = {
  title: "Thema's — GayJustice.org",
  description:
    "GayJustice.org Thema's: Juridische gidsen over homorechten, discriminatie, asiel, onderwijs & mensenrechten. Betrouwbare bronnen, praktische info.",
  canonical: "/thema/",
  lang: "nl-NL",
  pageType: "CollectionPage",
  alternates: [
    { hreflang: "nl", href: "https://www.gayjustice.org/thema/" },
    { hreflang: "en", href: "https://www.gayjustice.org/en/topics/" },
    { hreflang: "x-default", href: "https://www.gayjustice.org/" },
  ],
  breadcrumbs: [
    { name: "GayJustice.org", url: "https://www.gayjustice.org/" },
    { name: "Thema’s", url: "https://www.gayjustice.org/thema/" },
  ],
};
---

<Layout seo={seo}>
  <PageHeader
    eyebrow="Thema’s"
    title="Thema’s"
    lead="Kies een thema voor juridische uitleg, context en verwijzingen naar betrouwbare bronnen."
  />

  <Container>
    <section class="section">
      <div class="surface" style="padding: 22px; margin-bottom: 20px;">
        <p>
          GayJustice.org publiceert over onderwerpen die juridische bescherming,
          mensenrechten en gelijke behandeling van LHBTIQ+ personen in Nederland
          raken. Elk thema biedt juridische context, praktische gidsen en
          betrouwbare bronnen. Heeft u een juridische vraag? Begin met het
          relevante thema hieronder, of <a href="/contact">neem contact op</a> voor
          doorverwijzing.
        </p>
      </div>
    </section>
    <section class="section">
      <div class="surface" style="padding: 22px;">
        <h2>Thema's</h2>
        <ul>
          <li>
            <a class="link" href="/thema/mensenrechten">Mensenrechten</a>
          </li>
          <li>
            <a class="link" href="/thema/gay-rechten">Gayrechten / LGBTIQ+</a>
          </li>
          <li>
            <a class="link" href="/thema/homomonument">Homomonument</a>
          </li>
          <li>
            <a class="link" href="/thema/holocaust-homoseksuele-slachtoffers">
              Holocaust – homoseksuele slachtoffers
            </a>
          </li>
          <li>
            <a class="link" href="/thema/voorlichting-scholen">
              Voorlichting op scholen
            </a>
          </li>
          <li>
            <a class="link" href="/thema/dakloze-homoseksuele-jongeren">
              Dakloze homoseksuele jongeren
            </a>
          </li>
          <li>
            <a class="link" href="/thema/discriminatie-werk">
              Discriminatie op het werk
            </a>
          </li>
          <li>
            <a class="link" href="/thema/homoseksuele-vluchtelingen">
              Homoseksuele vluchtelingen
            </a>
          </li>
          <li>
            <a class="link" href="/thema/gezondheidszorg">
              Gezondheidszorg & transgender rechten
            </a>
          </li>
          <li>
            <a class="link" href="/thema/politieke-verantwoordelijkheid">
              Politieke verantwoordelijkheid
            </a>
          </li>
        </ul>
      </div>
    </section>
  </Container>
</Layout>
