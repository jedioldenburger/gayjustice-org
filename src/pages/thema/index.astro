---
import Layout from "../../layouts/Layout.astro";
import Container from "../../components/Container.astro";
import PageHeader from "../../components/PageHeader.astro";

const seo = {
  title: "Thema's — GayJustice.org",
  description:
    "Kies een thema voor juridische uitleg, context en verwijzingen naar betrouwbare bronnen.",
  canonical: "/thema/",
  lang: "nl-NL",
  pageType: "CollectionPage",
  alternates: [
    { hreflang: "nl", href: "https://www.gayjustice.org/thema/" },
    { hreflang: "en", href: "https://www.gayjustice.org/en/topics/" },
    { hreflang: "x-default", href: "https://www.gayjustice.org/" },
  ],
  breadcrumbs: [
    { name: "GayJustice.org", url: "https://www.gayjustice.org/" },
    { name: "Thema’s", url: "https://www.gayjustice.org/thema/" },
